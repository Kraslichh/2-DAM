    <children>
        <TextField fx:id="valorField" promptText="Ingrese el valor" />
        <Label fx:id="resultadoLabel" GridPane.columnSpan="3" text="Resultado: " />
        <Button fx:id="calcular4Button" text="Calcular 4%" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button fx:id="calcular10Button" text="Calcular 10%" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="calcular21Button" text="Calcular 21%" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    </children>
</GridPane>
