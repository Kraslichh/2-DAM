<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Ejercicio4.Controller">
    <TextField fx:id="nombreTextField" promptText="Nombre"/>
    <ComboBox fx:id="yearComboBox" promptText="Año"/>
    <TextField fx:id="precioTextField" promptText="Precio"/>
    <ComboBox fx:id="sinopsisComboBox" promptText="Sinopsis"/>
    
    <Button text="Añadir" onAction="#handleAñadir"/>
    <Button text="Limpiar" onAction="#handleLimpiar"/>
    <Button text="Borrar" onAction="#handleBorrar"/>
</VBox>
