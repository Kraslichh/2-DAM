<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_app</item>
        <item name="colorPrimaryDark">@color/purple_light</item>
        <item name="colorAccent">@color/button_purple</item>
    </style>

    <style name="WelcomeTextStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/button_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
